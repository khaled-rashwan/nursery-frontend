rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, allow public read access to all files.
    // This allows website assets to be displayed.
    // Write access is denied by default unless explicitly allowed by a more specific rule.
    match /{allPaths=**} {
      allow read;
      allow write: if false;
    }

    // Allow authorized users to write to the 'images' folder.
    // This rule is more specific than the one above, so it takes precedence for this path.
    match /images/{allPaths=**} {
      allow write: if request.auth != null &&
                      request.auth.token.role in ['superadmin', 'admin', 'content-manager'];
    }

    // Allow authorized users to write to the new 'media' folder for the library.
    match /media/{allPaths=**} {
      allow write: if request.auth != null && request.auth.token.role in ['admin', 'superadmin', 'content-manager'];
    }

    // Allow anonymous users to upload resumes to the 'resumes' folder for career applications.
    // Only allow file creation for anonymous users, admin/superadmin can manage (read/write/delete).
    match /resumes/{allPaths=**} {
      allow read: if request.auth != null && request.auth.token.role in ['admin', 'superadmin'];
      allow create: if true; // Allow anonymous users to upload resumes
      allow update, delete: if request.auth != null && request.auth.token.role in ['admin', 'superadmin'];
    }
  }
}
