# Environment Variables Template
# Copy this file to .env.local for local development

# ============================================================================
# Firebase Configuration
# ============================================================================
# These are found in your Firebase project settings
# Project settings > General > Your apps > Firebase SDK snippet > Config

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================================================
# Google reCAPTCHA v3 Configuration
# ============================================================================
# Get these from https://www.google.com/recaptcha/admin
# Use test keys for local development:
# Site Key: 6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI
# Secret Key: 6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe

# Frontend - Site Key (public)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Backend - Secret Key (private, set in Firebase Functions config)
# Set via Firebase CLI:
#   firebase functions:config:set recaptcha.secret_key="your_secret_key_here"
# OR as environment variable:
#   RECAPTCHA_SECRET_KEY=your_secret_key_here

# ============================================================================
# Project Configuration
# ============================================================================
NEXT_PUBLIC_PROJECT_ID=your-project-id

# ============================================================================
# Development Settings
# ============================================================================
# Set to true to enable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1
