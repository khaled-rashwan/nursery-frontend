# Environment Variables Template
# Copy this file to .env.local for local development

# ============================================================================
# Firebase Configuration
# ============================================================================
# These are found in your Firebase project settings
# Project settings > General > Your apps > Firebase SDK snippet > Config

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================================================
# Google reCAPTCHA Enterprise Configuration
# ============================================================================
# Get site key from https://console.cloud.google.com/security/recaptcha
# This project uses reCAPTCHA Enterprise with Service Account authentication

# Frontend - Site Key (public)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=6Lc1Y-orAAAAAB-fkrBM8xhIhu5WrZprgcgZVN25

# Backend Authentication:
# - On Google Cloud (Cloud Functions, Cloud Run): Uses Application Default Credentials (ADC)
# - Outside Google Cloud: Set GOOGLE_APPLICATION_CREDENTIALS to path of service account JSON key
#   Example: GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================================================
# Project Configuration
# ============================================================================
NEXT_PUBLIC_PROJECT_ID=your-project-id

# ============================================================================
# Development Settings
# ============================================================================
# Set to true to enable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1
